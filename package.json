{
  "scripts": {
    "dev": "bun esb & bun tw",
    "esb": "mkdir -p dist; cp index.dev.html dist/index.html && esbuild --watch=forever --loader:.woff=file --loader:.ttf=file --loader:.woff2=file --loader:.svg=file --loader:.eot=file --servedir=dist --format=esm --bundle --outfile=dist/index.mjs src/index.ts",
    "tw": "tailwindcss -i ./index.postcss -o ./index.css --watch",
    "build": "npm run build:tw && npm run build:esm && cp index.html dist/index.html",
    "build:esm": "esbuild --bundle --minify --format=esm --outfile=dist/index.mjs --loader:.woff=file --loader:.ttf=file --loader:.woff2=file --loader:.svg=file --loader:.eot=file src/index.ts",
    "build:tw": "tailwindcss -i ./index.postcss -o ./index.css --minify"
  },
  "dependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@zsnout/ithkuil": "^0.1.119",
    "mathjs": "^14.2.1",
    "regl": "^2.1.1",
    "tailwind": "^4.0.0",
    "tailwind-merge": "^2.6.0",
    "ts-unused-exports": "^11.0.1"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "semi": false,
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "experimentalTernaries": true,
    "proseWrap": "always"
  }
}
