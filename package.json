{
  "scripts": {
    "esb": "serve --watch --loader:.woff=file --loader:.ttf=file --loader:.woff2=file --loader:.svg=file --loader:.eot=file src/index.ts",
    "tw": "tailwindcss -i ./index.postcss -o ./index.css --watch",
    "build:esm": "esbuild --bundle --minify --format=esm --outfile=dist/index.mjs --loader:.woff=file --loader:.ttf=file --loader:.woff2=file --loader:.svg=file --loader:.eot=file src/editor/index.ts",
    "build:tw": "tailwindcss -i ./index.postcss -o ./index.css --minify",
    "build": "npm run build:tw && npm run build:esm && cp index.html dist/index.html"
  },
  "dependencies": {
    "esbuild": "^0.24.0",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3"
  },
  "prettier": {
    "semi": false,
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "experimentalTernaries": true
  }
}
